*****************************************************/
void r_stu(char *fp)
{
	FILE *file;
	int res,id,id_,class_;
	char name_[20];
	file=fopen(fp,"r");
	if(file==NULL)//判断是否打开成功
	{
		printf("打开文件失败\n");
		return;
	}
	printf("请输入学生学号：\n");
	scanf("%d",&id);
	while(1)
	{
		res=fscanf(file,"%d %s %d\n",&id_,name_,&class_);//从文件中读取内容
		if(res==-1)//判断是否读到文件末尾
		{
			printf("无此人信息\n");
			fclose(file);//关闭文件
			return;
		}
		if(id==id_)
		{
			printf("学号:%d 姓名:%s 班级:%d\n",id_,name_,class_);//输出学生证信息
			fclose(file);//关闭文件
			return;
		}
	}

}

